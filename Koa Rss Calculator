<script>
document.getElementById("calculateButton").addEventListener("click", calculateDifference);

function calculateDifference() {
  var upgradeRequirements1 = parseInt(document.getElementById("UpgradeRequirements-1").value);
  var upgradeRequirements2 = parseInt(document.getElementById("UpgradeRequirements-2").value);
  var upgradeRequirements3 = parseInt(document.getElementById("UpgradeRequirements-3").value);
  var upgradeRequirements4 = parseInt(document.getElementById("UpgradeRequirements-4").value);
  var available1 = parseInt(document.getElementById("Available-1").value);
  var available2 = parseInt(document.getElementById("Available-2").value);
  var available3 = parseInt(document.getElementById("Available-3").value);
  var available4 = parseInt(document.getElementById("Available-4").value);

  var difference1 = available1 - upgradeRequirements1; // Inverted calculation
  var difference2 = available2 - upgradeRequirements2; // Inverted calculation
  var difference3 = available3 - upgradeRequirements3; // Inverted calculation
  var difference4 = available4 - upgradeRequirements4; // Inverted calculation

  setResultAndFormatting("Difference-1", difference1);
  setResultAndFormatting("Difference-2", difference2);
  setResultAndFormatting("Difference-3", difference3);
  setResultAndFormatting("Difference-4", difference4);
}

function setResultAndFormatting(inputId, difference) {
  var inputElement = document.getElementById(inputId);
  inputElement.value = difference;

  if (difference > 0) {
    inputElement.style.color = "red";
    inputElement.style.fontWeight = "bold";
  } else if (difference < 0) {
    inputElement.style.color = "green";
    inputElement.style.fontWeight = "bold";
  } else {
    inputElement.style.color = "";
    inputElement.style.fontWeight = "";
  }
}
</script>
