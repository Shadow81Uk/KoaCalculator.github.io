<!DOCTYPE html> <html> <head> 
  <script>

function updateDifference(resource) {
    var requiredAmountInput = document.getElementById('required-amount-' + resource);
    var availableInput = document.getElementById('available-' + resource);
    var differenceInput = document.getElementById('difference-' + resource);

    var requiredAmount = parseFloat(requiredAmountInput.value);
    var available = parseFloat(availableInput.value);

    if (!isNaN(requiredAmount) && !isNaN(available)) {
      var difference = requiredAmount - available;
      differenceInput.value = difference;
    } else {
      differenceInput.value = "";
    }
  }
    function calculateSubTotal(table, row) {
      var amountCell = document.getElementById(table + '-Amount-' + row);
      var amount = parseFloat(amountCell.textContent);

      var mainCell = document.getElementById(table + '-Main-' + row);
      var mainInput = parseFloat(mainCell.value);

      var farmValues = [];
      for (var i = 1; i <= 7; i++) {
        var farmCell = document.getElementById(table + '-Farm' + i + '-' + row);
        var farmInput = parseFloat(farmCell.value);
        farmValues.push(isNaN(farmInput) ? 0 : farmInput);
      }

      var totalFarmValue = farmValues.reduce(function (acc, curr) {
        return acc + curr;
      }, 0);

      var subtotal = (isNaN(mainInput) ? 0 : mainInput) + totalFarmValue;

      subtotal *= amount;

      var subtotalCell = document.getElementById(table + '-Subtotal-' + row);
      subtotalCell.textContent = isNaN(subtotal) ? '' : subtotal.toString();

      calculateTotal(table);
    }

    function calculateTotal(table) {
      var subtotalCells = document.querySelectorAll('#' + table + ' .subtotal-cell');
      var totalCell = document.getElementById(table + '-Total');
      var total = 0;
      for (var i = 0; i < subtotalCells.length; i++) {
        var subtotal = parseFloat(subtotalCells[i].textContent);
        if (!isNaN(subtotal)) {
          total += subtotal;
        }
      }
      totalCell.textContent = total.toString();
      if (table === 'food') {
        updateFoodAvailable();
      } else if (table === 'wood') {
        updateWoodAvailable();
      } else if (table === 'iron') {
        updateIronAvailable();
      } else if (table === 'silver') {
        updateSilverAvailable();
      }
    }

    function updateFoodAvailable() {
      var foodTotal = parseFloat(document.getElementById('food-Total').textContent);
      var foodAvailableInput = document.getElementById('Available-1');
      foodAvailableInput.value = isNaN(foodTotal) ? '' : foodTotal.toString();
    }

    function updateWoodAvailable() {
      var woodTotal = parseFloat(document.getElementById('wood-Total').textContent);
      var woodAvailableInput = document.getElementById('Available-2');
      woodAvailableInput.value = isNaN(woodTotal) ? '' : woodTotal.toString();
    }

    function updateIronAvailable() {
      var ironTotal = parseFloat(document.getElementById('iron-Total').textContent);
      var ironAvailableInput = document.getElementById('Available-3');
      ironAvailableInput.value = isNaN(ironTotal) ? '' : ironTotal.toString();
    }

    function updateSilverAvailable() {
      var silverTotal = parseFloat(document.getElementById('silver-Total').textContent);
      var silverAvailableInput = document.getElementById('Available-4');
      silverAvailableInput.value = isNaN(silverTotal) ? '' : silverTotal.toString();
    }

    function updateQuickCalculations() {
      var quickTableRows = document.querySelectorAll('#TotalCalculator tbody tr');
      var mainTableRows = document.querySelectorAll('#MainCalculator tbody tr');

      for (var i = 0; i < quickTableRows.length; i++) {
        var quickRequirementsInput = quickTableRows[i].querySelector('input.requirements-input');
        var requirements = parseFloat(quickRequirementsInput.value);

        var quickAvailableCell = quickTableRows[i].querySelector('td:nth-child(3) input');
        var available = parseFloat(quickAvailableCell.value);

        var difference = available - requirements;
        var quickDifferenceCell = quickTableRows[i].querySelector('td:nth-child(4)');
        quickDifferenceCell.textContent = isNaN(difference) ? '' : difference.toString();

        var resourceType = quickTableRows[i].querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
        var mainSubtotalCell = mainTableRows[i].querySelector('.subtotal-cell');
        var mainSubtotal = parseFloat(mainSubtotalCell.textContent);

        if (resourceType === '🌾 food') {
          document.getElementById('Available-1').value = isNaN(mainSubtotal) ? '' : mainSubtotal.toString();
        } else if (resourceType === '🪵 wood') {
          document.getElementById('Available-2').value = isNaN(mainSubtotal) ? '' : mainSubtotal.toString();
        } else if (resourceType === '🪨 iron') {
          document.getElementById('Available-3').value = isNaN(mainSubtotal) ? '' : mainSubtotal.toString();
        } else if (resourceType === '🥈 silver') {
          document.getElementById('Available-4').value = isNaN(mainSubtotal) ? '' : mainSubtotal.toString();
        }
      }
    }
  </script>
